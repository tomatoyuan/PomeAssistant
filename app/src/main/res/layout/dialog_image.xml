<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/card3_dialog_bg2">

    <!-- 显示图片的 ImageView -->
<!--    <ImageView-->
<!--        android:id="@+id/dialog_image_view"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:scaleType="fitCenter"-->
<!--        android:contentDescription="@string/image_description" />-->

    <TextView
        android:id="@+id/sentence_title"
        android:layout_width="match_parent"
        android:fontFamily="@font/fangzhengyansongjianti"
        android:text="落英缤纷"
        android:textSize="25sp"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sentence_appreciation"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:padding="5dp"
                android:text="解释"
                android:fontFamily="@font/fangzhengpangshuxingshu"
                android:textSize="22sp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>


    <!-- 关闭按钮 -->
    <ImageView
        android:id="@+id/dialog_close_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_back"
        android:contentDescription="@string/close"
        android:scaleType="centerInside"
        android:layout_gravity="end"
        android:padding="4dp" />
</LinearLayout>
