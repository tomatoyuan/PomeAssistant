<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    card_view:cardBackgroundColor="#DFFFFFFF"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fangzhengjiantixingkai"
            android:text="桃花源记"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/authorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陶渊明"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="4dp"/>

            <TextView
                android:id="@+id/gradeTextView"
                android:layout_width="wrap_content"
                android:text="来自 八年级上册"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/taohua_yuan"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            app:shapeAppearanceOverlay="@style/AllRoundedCorners"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/ic_like"
                    android:layout_marginLeft="5dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/ic_add"
                    android:layout_marginLeft="8dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/ic_listen"
                    android:layout_marginLeft="8dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:src="@drawable/ic_share"
                    android:layout_marginLeft="8dp"
                    android:layout_height="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_learn_status"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"

                    android:src="@drawable/ic_nolearn" />

                <TextView
                    android:id="@+id/text_learn_status"
                    android:layout_width="wrap_content"
                    android:text="未学习"
                    android:textSize="15sp"
                    android:textColor="#888888"
                    android:layout_gravity="right"
                    android:layout_height="24dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
