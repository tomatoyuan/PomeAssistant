<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".studytopfragment.SubFragment2">

    <!-- 用作 Fragment 容器 -->
    <FrameLayout
        android:id="@+id/sub2_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 写作手法标题 -->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="写作手法"-->
<!--                    android:textSize="24sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_gravity="left"-->
<!--                    android:paddingBottom="6dp" />-->

                <ImageView
                    android:layout_width="240dp"
                    android:src="@drawable/xiezuoshoufa"
                    android:layout_gravity="left"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp"/>

                <!-- 展示四个写作手法的卡片 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 第一张卡片 -->
                    <LinearLayout
                        android:id="@+id/style1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/transparent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/TopRoundedCorners"
                            android:src="@drawable/_01pic1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="托物言志"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"
                            android:paddingHorizontal="8dp"
                            android:background="@color/white"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="通过对物品的描写和叙述，表达自己的志向和愿望"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <!-- 第二张卡片 -->
                    <LinearLayout
                        android:id="@+id/style2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/TopRoundedCorners"
                            android:src="@drawable/_01pic2" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="借景抒情"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="作者带着强烈的主观感情去描写客观景物"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <!-- 第三张卡片 -->
                    <LinearLayout
                        android:id="@+id/style3"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/transparent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/TopRoundedCorners"
                            android:src="@drawable/_01pic3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="怀古伤今"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="通过缅怀过去，来感叹现实和未来的变化"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                    <!-- 第四张卡片 -->
                    <LinearLayout
                        android:id="@+id/style4"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@android:color/transparent">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/TopRoundedCorners"
                            android:src="@drawable/_01pic4" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="直抒胸臆"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:paddingTop="8dp"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="4dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingHorizontal="8dp"
                            android:paddingBottom="8dp"
                            android:text="通过补实无华的手段，直抒心情"
                            android:textSize="12sp"
                            android:textColor="#888888" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/style5"
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="更多写作手法•••"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <!-- 写作手法标题 -->
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="文章体裁"-->
<!--                    android:textSize="24sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_gravity="left"-->
<!--                    android:paddingBottom="6dp" />-->

                <ImageView
                    android:layout_width="240dp"
                    android:src="@drawable/wenzhangticai"
                    android:layout_gravity="left"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/_01pic5"
                    android:scaleType="centerCrop"
                    android:layout_height="200dp"/>

            </LinearLayout>

            <!-- 标签导航栏 -->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/my_light_primary_dan"
                app:tabIndicatorColor="@color/white"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="#888888"
                app:tabBackground="@drawable/study_1_tab_background_selector"
                app:tabMode="fixed">

<!--                <com.google.android.material.tabs.TabItem-->
<!--                    android:id="@+id/ap_style1"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="旧体诗" />-->

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文言文" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="唐诗" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宋词" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元曲" />
            </com.google.android.material.tabs.TabLayout>



            <!-- 书本展示区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="16dp">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="教材古诗文"-->
<!--                    android:textSize="24sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_gravity="left"-->
<!--                    android:paddingBottom="6dp" />-->

                <ImageView
                    android:layout_width="240dp"
                    android:src="@drawable/jiaocaigushiwen"
                    android:layout_gravity="left"
                    android:scaleType="centerCrop"
                    android:layout_height="70dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- 左边书本 -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="15dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/AllRoundedCorners"
                        android:src="@drawable/_01pic6" />

                    <!-- 右边书本 -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="15dp"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/AllRoundedCorners"
                        android:src="@drawable/_01pic7" />
                </LinearLayout>

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>